{
    "variables": {
        "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
        "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
        "aws_region": "ap-southeast-1",
        "aws_instance_type": "t2.micro",
        "name": "PRO-API-01A",
        "vpc_id": "vpc-ec0ea489",
        "subnet_id": "subnet-35f39650",
        "source_ami": "ami-fc5ae39f",
        "iam_instance_profile": "PRO-EC2",
        "ssh_username": "ec2-user"
    },
    
    "builders": [{
                 "name": "{{ user `name` }}-{{ isotime \"20060102\" }}",
                 "type": "amazon-ebs",
                 "access_key": "{{ user `aws_access_key` }}",
                 "secret_key": "{{ user `aws_secret_key` }}",
                 "region": "{{ user `aws_region` }}",
                 "instance_type": "{{ user `aws_instance_type` }}",
                 "iam_instance_profile": "{{ user `iam_instance_profile` }}",
                 "ssh_username": "{{user `ssh_username`}}",
                 "communicator": "ssh",
                 "ssh_pty": "true",
                 "ssh_timeout": "5m",
                 "ami_name": "{{user `name`}}-{{ isotime \"20060102\" }}",
                 "ami_description": "AMI of {{ user `name` }}",
                 "tags": {
                 "VPC": "PRO",
                 "Name": "{{ user `name` }}",
                 "Role": "API",
                 "Created": "{{ isotime \"20060102\" }}-{{timestamp}}"
                 
                 },
                 "associate_public_ip_address": "true",
                 "source_ami": "{{user `source_ami`}}",
                 "subnet_id": "{{ user `subnet_id` }}",
                 "vpc_id": "{{ user `vpc_id` }}",
                 "ami_block_device_mappings": [{
                                               "device_name": "/dev/xvda",
                                               "volume_size": 8,
                                               "volume_type": "gp2",
                                               "delete_on_termination": "true"
                                               }]
                 }
                 ],
    "provisioners": [{
                     "type": "shell",
                     "script": "provision/user_data.sh"
                     }
                     ]
}
